{
    "$schema": "https://json.schemastore.org/template",
    "author": "Vijay Anand E G",
    "defaultName": "BlazorWinForms",
    "classifications": [
        "Windows",
        "Desktop",
        "Windows Forms",
        "Blazor"
    ],
    "identity": "VijayAnand.WindowsForms.Blazor",
    "description": "A project for hosting Blazor component in the Windows Forms desktop application",
    "name": "Windows Forms App with Blazor component (.NET 6/7 & .NET MAUI)",
    "shortName": "winforms-blazor",
    "sourceName": "BlazorWinForms",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "preferNameDirectory": true,
    "guids": [
        "BFE86658-D849-4D16-9254-B6375A7C11E5"
    ],
    "symbols": {
        "Framework": {
            "type": "parameter",
            "datatype": "choice",
            "description": "Option to choose the application target framework.",
            "choices": [
                {
                    "choice": "net7.0",
                    "description": "Target net7.0",
                    "displayName": ".NET 7 (Preview)"
                },
                {
                    "choice": "net6.0",
                    "description": "Target net6.0",
                    "displayName": ".NET 6 (LTS)"
                }
            ],
            "replaces": "DOTNET_TFM",
            "defaultValue": "net7.0"
        },
        "frameworkLower": {
            "type": "generated",
            "generator": "casing",
            "parameters": {
                "source": "Framework",
                "toLower": true
            }
        },
        "Net7": {
            "type": "computed",
            "value": "(frameworkLower == \"net7.0\" || frameworkLower == \".net 7.0 (preview)\")"
        },
        "HostIdentifier": {
            "type": "bind",
            "binding": "HostIdentifier"
        }
    },
    "sources": [
        {
            "source": "./",
            "target": "./",
            "copyOnly": [
                "**/*.eot",
                "**/*.svg",
                "**/*.ttf",
                "**/*.woff",
                "**/*.woff2",
                "**/*.min.css",
                "**/*.min.css.map",
                "**/*.min.js"
            ],
            "modifiers": [
                {
                    "condition": "(!(HostIdentifier == \"dotnetcli\" || HostIdentifier == \"dotnetcli-preview\"))",
                    "exclude": [
                        "BlazorWinForms.sln"
                    ]
                }
            ]
        }
    ]
}
