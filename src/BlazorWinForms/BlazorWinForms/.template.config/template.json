{
    "$schema": "https://json.schemastore.org/template",
    "author": "Vijay Anand E G",
    "defaultName": "BlazorWinForms",
    "classifications": [
        "Windows",
        "Desktop",
        "Windows Forms",
        "Blazor"
    ],
    "identity": "VijayAnand.WindowsForms.Blazor",
    "description": "A project for hosting Blazor component in the Windows Forms desktop application",
    "name": "Windows Forms App with Blazor component (.NET 6 / .NET MAUI)",
    "shortName": "winforms-blazor",
    "sourceName": "BlazorWinForms",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "preferNameDirectory": true,
    "guids": [
        "BFE86658-D849-4D16-9254-B6375A7C11E5"
    ],
    "symbols": {
        "HostIdentifier": {
            "type": "bind",
            "binding": "HostIdentifier"
        }
    },
    "sources": [
        {
            "source": "./",
            "target": "./",
            "copyOnly": [
                "**/*.eot",
                "**/*.svg",
                "**/*.ttf",
                "**/*.woff",
                "**/*.woff2",
                "**/*.min.css",
                "**/*.min.css.map",
                "**/*.min.js"
            ],
            "modifiers": [
                {
                    "condition": "(!(HostIdentifier == \"dotnetcli\" || HostIdentifier == \"dotnetcli-preview\"))",
                    "exclude": [
                        "BlazorWinForms.sln"
                    ]
                }
            ]
        }
    ]
}
